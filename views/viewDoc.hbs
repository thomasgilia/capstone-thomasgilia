<h1>{{#if thisClient}}{{resourceType}} for client {{thisClient.clientName}}
    {{else}}
    {{resourceType}} with no associated Client
    {{/if}}
</h1>
<a class="btn btn-primary" href='/docs/'>New {{resourceType}}</a>
<a class="btn btn-primary" href='/edit/doc{{resources.id}}'>Edit {{resourceType}}</a>
<a class="btn btn-primary" href='/delete/doc{{resources.id}}'>Delete {{resourceType}}</a></td>

<div>
    <table class="table">
        <tr>
            <th>{{resourceType}}: {{resources.title}}</th>
            <br>
        </tr>
        <tr>
            <td>{{resources.note}}</td>
            <br>
        </tr>
    </table>
</div>
<br>
<table class="table">
    <tr>
        <th>{{resourceType}} Id</th>
        <th>Category:</th>
        <th>Origin:</th>
        <th>Pathway:</th>
        <th>Last updated by:</th>
    </tr>
    <tr>
        <td>{{resources.id}}</td>
        <td>{{resources.category}}</td>
        <td>{{resources.origin}}</td>
        <td>{{resources.docPath}}</td>
        <td>{{resources.lastUpdateUser}}</td>
    </tr>
</table>
<h2>This document belongs to client:</h2>
{{thisClient.clientName}}, client Id {{thisClient.id}}
<br>
<h3>This document belongs to note:</h3>
<table class="table">
    <tr>
        <th>Note Title</th>
        <th>Note Id</th>
    </tr>
    <tr>
        <td>{{thisNote.title}}</td>
        <td>{{thisNote.id}}</td>
    </tr>
</table>
<br>

    <form action="/docs/note{{resources.id}}/client{{thisClient.id}}" method="post">
        <label for="obsoleteDocId">Delete this Document</label>
        <select name="obsoleteDocId" id="obsoleteDocId">
            <option>--Choose document to delete--</option>
            {{#each docsThisNote}}
            <option value={{this.id}}>{{this.title}} (Doc Id {{this.id}})</option>
            {{/each}}
        </select>
        <input type="hidden" name="noteId" value="{{resources.id}}" />
        <input type="hidden" name="clientId" value="{{thisClient.id}}" />
        <button type="submit">Delete Doc</button>
        <br>
    </form>
</div>