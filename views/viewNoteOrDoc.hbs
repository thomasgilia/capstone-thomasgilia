<!--   doc association -->
<form action="/associations" method="post">
    <h2>Documents associated with this Note:</h2>
    {{#if existingResource}}
    <table class="table">
        <tr>
            <th>Document Title</th>
            <th>Document Id</th>
        </tr>
        <tr>
            {{#each docList}}
            <td>{{this.title}}</td>
            <td>{{this.id}}</td>
        </tr>
        {{/each}}
    </table>
    {{/if}}
    <select name="chooseDocument" id="chooseDocument">
        <option value="" selected>--None--</option>
        {{#each docList}}
        <option>{{this}}</option>
        {{/each}}
    </select>

    <input type="hidden" name="assoc1Type" value="{{resourceType}}" />
    <input type="hidden" name="assoc1Id" value="{{resources.id}}" />

    <button type="submit">Add Doc</button>
</form>
