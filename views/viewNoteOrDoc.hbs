<form action="/associations" method="post"></form>
<h2>This note belongs to client:</h2>
{{#if thisClient}}{{thisClient.clientName}}
{{else}}
<select name="chooseClient" id="chooseClient">
    <option value="" selected>--None--</option>
    {{#each clientList}}
    <option>{{this}}</option>
    {{/each}}
</select>
{{/if}}
<!--now 'chooseClient' value should be on object being sent on-->
<input type="hidden" name="docAssociated" value="true" />
<input type="hidden" name="assoc1Type" value="{{resourceType}}" />
<input type="hidden" name="assoc1Id" value="{{resources.id}}" />
<input type="hidden" name="assoc2Type" value="Client" />
<button type="submit">Add Client</button>
</form>